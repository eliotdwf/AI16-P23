<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', title='Utilisateurs'); %>

<body>
<%- include('../partials/headers/header', role=role); %>
<main class="container">
    <div class="d-flex justify-content-between align-items-end">
        <%- include('../partials/title', title="Demandes de création d'organisations"); %>
        <div class="d-flex flex-row">
            <label for="filtre-role" class="col-form-label text-end ms-2 me-2">Types d'organisation :</label>
            <div class="col-md">
                <select id="filtre-type-orga" class="form-select">
                    <option value="0" selected>Tous</option>
                    <option value="1">Entreprises</option>
                    <option value="2">Associations</option>
                </select>
            </div>
        </div>
    </div>


    <div id="alertMessages" class="row justify-content-center mt-3"></div>

    <div id="orgasTable" class="mt-3">
        <% if(orgas.length > 0) {%>
        <%- include("../partials/organisationsList", organisations=orgas); %>
        <% } else { %>
            <div class="d-flex justify-content-center">
                <%- include("../partials/bs-alert", type="error", message="Aucun demande de création d'organisation n'a été trouvée !"); %>
            </div>
        <% } %>
    </div>
</main>



<script src="/js/organisations.js">

</script>
</body>
</html>